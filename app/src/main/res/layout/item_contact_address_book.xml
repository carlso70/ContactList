<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:text="First"
        android:id="@+id/contactFirstName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last"
        android:id="@+id/contactLastName"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/contactFirstName"
        android:layout_toEndOf="@+id/contactFirstName"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9/ 19/ 1996"
        android:id="@+id/contactDateOfBirth"
        android:layout_alignBottom="@+id/contactLastName"
        android:layout_toRightOf="@+id/contactLastName"
        android:layout_toEndOf="@+id/contactLastName"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1275 First Street Chicago"
        android:id="@+id/contactAddress"
        android:layout_alignTop="@+id/contactDateOfBirth"
        android:layout_toRightOf="@+id/contactDateOfBirth"
        android:layout_toEndOf="@+id/contactDateOfBirth"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp" />

</RelativeLayout>